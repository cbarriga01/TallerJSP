<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="orm.Empresa" table="empresa" lazy="false">
		<id name="idEmpresa" column="idEmpresa" type="integer" unsaved-value="0">
			<generator class="sequence">
				<param name="sequence">seq_empresa</param>
			</generator>
		</id>
		<property name="rut" column="rut" unique="true" type="string" length="12" not-null="true" lazy="false"/>
		<property name="razonSocial" column="razonSocial" type="string" length="30" not-null="true" lazy="false"/>
		<property name="nombreEmpresa" column="nombreEmpresa" type="string" length="30" not-null="true" lazy="false"/>
		<property name="representante" column="representante" type="string" length="50" not-null="true" lazy="false"/>
		<property name="mailEmpresa" column="mailEmpresa" type="string" length="20" not-null="true" lazy="false"/>
		<property name="telefonoEmpresa" column="telefonoEmpresa" type="string" length="20" not-null="true" lazy="false"/>
		<property name="paisEmpresa" column="paisEmpresa" type="string" length="20" not-null="true" lazy="false"/>
		<property name="regionEmpresa" column="regionEmpresa" type="string" length="20" not-null="true" lazy="false"/>
		<property name="ciudadEmpresa" column="ciudadEmpresa" type="string" length="20" not-null="true" lazy="false"/>
		<property name="domicilio" column="domicilio" type="string" length="30" not-null="true" lazy="false"/>
		<set name="ORM_Contacto" lazy="true" cascade="save-update,lock" inverse="true">
			<key column="idEmpresa" not-null="true"/>
			<one-to-many class="orm.Contacto"/>
		</set>
	</class>
</hibernate-mapping>
